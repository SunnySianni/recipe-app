<%- include('partials/header') %>

<div class="recipe-container">
  <h2 class="recipe-title"><%= recipe.title %></h2>
  
  <div class="recipe-content">
    <h3>Ingredients:</h3>
    <p class="ingredients"><%= recipe.ingredients %></p>
  
    <h3>Instructions:</h3>
    <p class="instructions"><%= recipe.instructions %></p>
  </div>

  <div class="recipe-actions">
    <a href="/recipes/<%= recipe.id %>/edit" class="edit-btn">Edit</a>
    
    <!-- Delete confirmation added -->
    <form action="/recipes/<%= recipe.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
      <button type="submit" class="delete-btn">Delete</button>
    </form>
  </div>
  
  <!-- Back to all recipes link -->
  <a href="/recipes" class="back-link">Back to all recipes</a>
</div>

<%- include('partials/footer') %>

